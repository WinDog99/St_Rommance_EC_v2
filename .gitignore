# =========================
# Backend (Laravel / PHP)
# =========================
backend/vendor/
backend/node_modules/

# public/storage はシンボリックリンクなので無視
backend/public/storage

# storage配下は基本無視（例外として .gitignore は残す）
backend/storage/*
!backend/storage/.gitignore

# bootstrap/cache 内は生成物のみ無視（.gitignore は残す）
backend/bootstrap/cache/*
!backend/bootstrap/cache/.gitignore

# PHPUnit / テスト生成物
backend/.phpunit.cache/
backend/coverage/

# Laravel 環境ファイル（例のみ残す）
backend/.env
backend/.env.*
!backend/.env.example

# composer 実体は無視（lockはコミット推奨）
backend/composer.phar